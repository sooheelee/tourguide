<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/custom_image"
        android:layout_width="@dimen/custom_info_window_iv_width"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:paddingTop="@dimen/custom_info_window_padding_top"
        android:scaleType="centerCrop"
        tools:src="@drawable/pano_beach" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/custom_info_window_text_left_right_padding"
        android:paddingRight="@dimen/custom_info_window_text_left_right_padding"
        android:paddingTop="@dimen/custom_info_window_padding_bottom"
        tools:text="@string/tools_beach_text"
        tools:textSize="@dimen/tools_custom_text_size_title" />

    <TextView
        android:id="@+id/snippet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/custom_info_window_padding_bottom"
        android:paddingLeft="@dimen/custom_info_window_text_left_right_padding"
        android:paddingRight="@dimen/custom_info_window_text_left_right_padding"
        android:paddingTop="@dimen/custom_info_window_padding_top"
        tools:text="@string/tools_beach_photo_text"
        tools:textSize="@dimen/tools_custom_text_size_snippet" />
</LinearLayout>
